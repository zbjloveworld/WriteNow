<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:round="http://schemas.android.com/apk/res/com.project.writenow"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background0"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="100dp"
        android:scrollbarStyle="outsideOverlay"
        android:background="#afff">
        <LinearLayout
            android:id="@+id/user_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="@string/sign_in_text"
                android:textSize="56sp"
                android:textStyle="bold" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:fontFamily="sans-serif"
                android:hint="@string/prompt_username"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                app:met_floatingLabel="normal"
                app:met_maxCharacters="11"
                app:met_minCharacters="11" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="@string/prompt_password"
                android:imeActionId="@integer/customImeActionId"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                app:met_floatingLabel="normal"
                app:met_maxCharacters="20"
                app:met_minCharacters="6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <CheckBox
                    android:id="@+id/login_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:checked="true" />

                <TextView
                    android:id="@+id/login_checkbox_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/login_checkbox"
                    android:layout_toRightOf="@+id/login_checkbox"
                    android:fontFamily="sans-serif"
                    android:text="@string/remember_text" />

                <TextView
                    android:id="@+id/forgot_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/login_checkbox_text"
                    android:layout_toRightOf="@+id/login_checkbox_text"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="@string/forgot_text_text"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:id="@+id/username_sign_in_button"
                style="?android:textAppearanceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/action_sign_in"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
    <ImageView
        android:id="@+id/sign_in_logo_back"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_shape" />
    <com.project.writenow.util.RoundImageView
        android:id="@+id/sign_in_logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp"
        round:borderRadius="75dp"
        round:type="round"
        android:src="@drawable/people"
        android:contentDescription="@string/login_shape_des" />




</FrameLayout>